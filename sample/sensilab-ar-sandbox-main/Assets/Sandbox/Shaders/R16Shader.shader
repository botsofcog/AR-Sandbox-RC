Shader "Unlit/R16Shader"
{
	Properties
	{
		_R16Tex ("R16 Texture", 2D) = "white" {}
	}
	SubShader
	{
		Tags { "RenderType"="Opaque" }

		Pass
		{
			CGPROGRAM
			#pragma vertex vert
			#pragma fragment frag
			
			#include "UnityCG.cginc"

			struct appdata
			{
				float4 vertex : POSITION;
				float2 uv : TEXCOORD0;
			};

			struct v2f
			{
				float2 uv : TEXCOORD0;
				float4 vertex : SV_POSITION;
			};

			sampler2D _R16Tex;
			float4 _R16Tex_ST;
			
			v2f vert (appdata v)
			{
				v2f o;
				o.vertex = UnityObjectToClipPos(v.vertex);
				o.uv = TRANSFORM_TEX(v.uv, _R16Tex);
				return o;
			}
			
			fixed4 frag (v2f i) : SV_Target
			{
				float r = (float)tex2D(_R16Tex, i.uv);
				float scaledR =(r * 65535.0f - 1050.724) / 250.0;
				return fixed4(scaledR, 0, 0, 1);
			}
			ENDCG
		}
	}
}
